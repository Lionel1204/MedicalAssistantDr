<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_main_message"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/activity_main_button_height"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:drawableTop="@drawable/message"
                android:onClick="onBtnClick"
                android:text="@string/main_call_info" />

            <Button
                android:id="@+id/btn_main_dr_mgmt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/activity_main_button_height"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:drawableTop="@drawable/dr_mgmt"
                android:onClick="onBtnClick"
                android:text="@string/main_dr_management" />

            <Button
                android:id="@+id/btn_main_pt_mgmt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/activity_main_button_height"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:drawableTop="@drawable/pt_mgmt"
                android:onClick="onBtnClick"
                android:text="@string/main_pt_management" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_main_payment_mgmt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/activity_main_button_height"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:drawableTop="@drawable/pay_mgmt"
                android:onClick="onBtnClick"
                android:text="@string/main_payment_management" />

            <Button
                android:id="@+id/btn_main_activity_mgmt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/activity_main_button_height"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:drawableTop="@drawable/act_mgmt"
                android:onClick="onBtnClick"
                android:text="@string/main_activity_management" />

            <Button
                android:id="@+id/btn_main_profile"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/activity_main_button_height"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:drawableTop="@drawable/profile"
                android:onClick="onBtnClick"
                android:text="@string/main_profile" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>